<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image1"
        android:layout_height="80dp"
        android:layout_width="80dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        >
    </ImageView>
    <Button
        android:id="@+id/image1Btn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Coil 기본 설정 적용"
        android:textStyle="bold"
        android:backgroundTint="@color/purple_200"
        app:layout_constraintStart_toEndOf="@id/image1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="45dp"
        >
    </Button>


    <ImageView
        android:id="@+id/image2"
        android:layout_height="80dp"
        android:layout_width="80dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image1"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        >
    </ImageView>
    <Button
        android:id="@+id/image2Btn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Coil GIF 이미지 적용"
        android:textStyle="bold"
        android:backgroundTint="@color/purple_200"
        app:layout_constraintStart_toEndOf="@id/image1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image1"
        android:layout_marginTop="45dp"
        >
    </Button>
    <ImageView
        android:id="@+id/image3"
        android:layout_height="80dp"
        android:layout_width="80dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image2"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        >
    </ImageView>
    <Button
        android:id="@+id/image3Btn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="fade in 설정 적용"
        android:textStyle="bold"
        android:backgroundTint="@color/purple_200"
        app:layout_constraintStart_toEndOf="@id/image1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image2"
        android:layout_marginTop="45dp"
        >
    </Button>

    <ImageView
        android:id="@+id/image4"
        android:layout_height="80dp"
        android:layout_width="80dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image3"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        >
    </ImageView>
    <Button
        android:id="@+id/image4Btn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="원형Crop 설정 적용"
        android:textStyle="bold"
        android:backgroundTint="@color/purple_200"
        app:layout_constraintStart_toEndOf="@id/image3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image3"
        android:layout_marginTop="45dp"
        >
    </Button>

    <ImageView
        android:id="@+id/image5"
        android:layout_height="80dp"
        android:layout_width="80dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image4"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        >
    </ImageView>
    <Button
        android:id="@+id/image5Btn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="모서리 라운드 설정 적용"
        android:textStyle="bold"
        android:backgroundTint="@color/purple_200"
        app:layout_constraintStart_toEndOf="@id/image4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image4"
        android:layout_marginTop="35dp"
        >
    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>