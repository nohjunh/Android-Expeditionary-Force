<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:padding="5dp">
        <TextView
            android:id="@+id/coinNameTV"
            android:text="BTC"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/bidsTV"
            android:text="bid : "
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            app:layout_constraintStart_toEndOf="@id/coinNameTV"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/asksTV"
            android:text="ask : "
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            app:layout_constraintStart_toEndOf="@id/coinNameTV"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/bidsPriceTV1"
            android:text="0000000000원"
            android:textSize="15sp"
            android:textColor="@color/purple_200"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            app:layout_constraintStart_toEndOf="@id/bidsTV"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/bidsPriceTV2"
            android:text="0000000000원"
            android:textSize="15sp"
            android:textColor="@color/purple_200"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            app:layout_constraintStart_toEndOf="@id/bidsTV"
            app:layout_constraintTop_toBottomOf="@id/bidsPriceTV1"/>

        <TextView
            android:id="@+id/asksPriceTV1"
            android:text="0000000000원"
            android:textSize="15sp"
            android:textColor="@color/purple_200"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            app:layout_constraintStart_toEndOf="@id/asksTV"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/asksPriceTV2"
            android:text="0000000000원"
            android:textSize="15sp"
            android:textColor="@color/purple_200"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            app:layout_constraintStart_toEndOf="@id/asksTV"
            app:layout_constraintBottom_toTopOf="@id/asksPriceTV1"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>