<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Version1" parent="Theme.AppCompat.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- 타이틀바 제거 -->
        <item name="windowNoTitle">true</item>

    </style>

    <!-- Splash 처리 -->
    <style name="Theme.Version1.Splash" parent="Theme.SplashScreen">
        <!-- 백그라운드 color -->
        <item name="windowSplashScreenBackground">@color/Splash_bg_color</item>
        <!-- splash icon -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_ic</item>
        <!-- splash delay -->
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <!-- splash 종료 후 기본 테마 지정 -->
        <item name="postSplashScreenTheme">@style/Theme.Version1</item>

    </style>

</resources>